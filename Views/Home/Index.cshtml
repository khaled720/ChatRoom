@{
    ViewData["Title"] = "Home Page";
}

@model WebApplication2.Models.Book
<div class="text-center">
    <h1 class="display-4">Welcome To Chat Room</h1>
    <p>Start Chating now type your messages and hit send.</p>

</div>

<div class="container">
    <div class="row">

        <div class="col-md-6">
            <span>Enter your name</span> <br />
            <input type="text" id="txtUser" /> <br />
            <span>Enter your Message</span> <br />
            <textarea rows="5" cols="40" id="txtMessage"></textarea> <br />
            <button type="submit" id="btnSend" class="btn btn-info">Send Message</button>
        </div>

        <div class="col-md-6">

            <h3>Messages</h3>

            <ul id="list" class="alert alert-info">
            </ul>



        </div>

    </div>



</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>